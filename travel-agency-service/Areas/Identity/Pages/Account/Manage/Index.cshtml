@page
@model IndexModel
@{
    ViewData["Title"] = "Account";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-md-5">

                    <!-- Header -->
                    <div class="mb-4">
                        <h2 class="fw-bold mb-1">Account Settings</h2>
                        <p class="text-muted mb-0">
                            Manage your profile and personal information
                        </p>
                    </div>

                    <partial name="_StatusMessage" for="StatusMessage" />

                    <div class="row g-4">
                        <!-- Sidebar -->
                        <div class="col-md-4 col-lg-3">
                            <div class="list-group rounded-4 overflow-hidden shadow-sm">
                            </div>
                        </div>

                        <!-- Content -->
                        <div class="col-md-8 col-lg-9">
                            <form method="post">

                                <div asp-validation-summary="ModelOnly"
                                     class="alert alert-danger py-2"
                                     role="alert"></div>

                                <!-- Username -->
                                <div class="mb-3">
                                    <label class="form-label fw-semibold">Email</label>
                                    <input asp-for="Username"
                                           class="form-control"
                                           disabled />
                                </div>

                                <!-- Phone -->
                                <div class="mb-4">
                                    <label asp-for="Input.PhoneNumber"
                                           class="form-label fw-semibold"></label>
                                    <input asp-for="Input.PhoneNumber"
                                           class="form-control"
                                           placeholder="Enter phone number" />
                                    <span asp-validation-for="Input.PhoneNumber"
                                          class="text-danger small"></span>
                                </div>

                                <button type="submit"
                                        class="btn btn-primary px-4 py-2 fw-semibold">
                                    Save Changes
                                </button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>

            <p class="text-center text-muted small mt-3 mb-0">
                © 2025 Travel Agency Service
            </p>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
