@model IEnumerable<travel_agency_service.Models.WaitingListEntry>

@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Waiting List";
    var package = ViewBag.Package as travel_agency_service.Models.TravelPackage;
}

<div class="container py-4">
    <h2>
        Waiting List – @package.Destination (@package.Country)
    </h2>

    <p>
        <strong>Available rooms:</strong> @package.AvailableRooms
    </p>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No users are currently waiting for this package.
        </div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Joined At</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int index = 1;
                }
                @foreach (var w in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@w.User.FirstName</td>
                        <td>@w.User.LastName</td>
                        <td>@w.User.Email</td>
                        <td>@w.CreatedAt.ToLocalTime()</td>
                    </tr>
                    index++;
                }
            </tbody>
        </table>
    }

    <a asp-action="Index" class="btn btn-secondary mt-3">
        ← Back to Packages
    </a>
</div>
