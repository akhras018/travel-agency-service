@model travel_agency_service.Models.TravelPackage
@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit Package";
}

<h2>Edit Travel Package</h2>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />

    <div class="mb-2">
        <label asp-for="Destination"></label>
        <input asp-for="Destination" class="form-control" />
    </div>

    <div class="mb-2">
        <label asp-for="Country"></label>
        <input asp-for="Country" class="form-control" />
    </div>

    <div class="row mb-2">
        <div class="col">
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate" type="date" class="form-control" />
        </div>
        <div class="col">
            <label asp-for="EndDate"></label>
            <input asp-for="EndDate" type="date" class="form-control" />
        </div>
    </div>

    <!-- Base Price -->
    <div class="mb-2">
        <label asp-for="BasePrice">Base Price</label>
        <input asp-for="BasePrice" class="form-control" />
    </div>

    <hr />
    <h5>Discount (optional – max 7 days)</h5>

    <div class="mb-2">
        <label asp-for="DiscountPrice">Discount Price</label>
        <input asp-for="DiscountPrice" class="form-control" />
    </div>

    <div class="row mb-2">
        <div class="col">
            <label asp-for="DiscountStart">Discount Start</label>
            <input asp-for="DiscountStart" type="date" class="form-control" />
        </div>
        <div class="col">
            <label asp-for="DiscountEnd">Discount End</label>
            <input asp-for="DiscountEnd" type="date" class="form-control" />
        </div>
    </div>

    <div class="mb-2">
        <label asp-for="AvailableRooms"></label>
        <input asp-for="AvailableRooms" class="form-control" />
    </div>

    <div class="mb-2">
        <label asp-for="PackageType"></label>
        <select asp-for="PackageType" class="form-control"
                asp-items="Html.GetEnumSelectList<PackageType>()">
        </select>
    </div>

    <div class="mb-2">
        <label asp-for="AgeLimitation"></label>
        <input asp-for="AgeLimitation" class="form-control" />
    </div>

    <div class="mb-2">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="ImageUrls">Image URLs (one per line)</label>
        <textarea asp-for="ImageUrls" class="form-control"></textarea>
    </div>

    <button class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
