@model travel_agency_service.Models.TravelPackage
@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit Package";
}

<h2>Edit Travel Package</h2>
<div class="d-flex justify-content-center gap-2 mb-4">

    <!-- Delete -->
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post"
          onsubmit="return confirm('Are you sure you want to delete this package?');">
        <button type="submit" class="btn btn-danger">
            🗑 Delete
        </button>
    </form>

    <!-- Waiting List -->
    <a asp-action="WaitingList"
       asp-route-id="@Model.Id"
       class="btn btn-info text-white">
        ⏳ Waiting List
    </a>

    <!-- Hide / Show -->
    <form asp-action="ToggleVisibility"
          asp-route-id="@Model.Id"
          method="post">
        <button type="submit"
                class="btn @(Model.IsVisible ? "btn-secondary" : "btn-success")">
            @(Model.IsVisible ? " Hide" : "👁 Show")
        </button>
    </form>

</div>


<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
 
    <div class="mb-2">
        <label asp-for="Destination"></label>
        <input asp-for="Destination" class="form-control" />
    </div>

    <div class="mb-2">
        <label asp-for="Country"></label>
        <input asp-for="Country" class="form-control" />
    </div>

    <div class="row mb-2">
        <div class="col">
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate" type="date" class="form-control" />
        </div>
        <div class="col">
            <label asp-for="EndDate"></label>
            <input asp-for="EndDate" type="date" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="LastBookingDate"></label>
        <input asp-for="LastBookingDate" class="form-control" />
        <span asp-validation-for="LastBookingDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CancellationDeadline"></label>
        <input asp-for="CancellationDeadline" class="form-control" />
        <span asp-validation-for="CancellationDeadline" class="text-danger"></span>
    </div>


    <!-- Base Price -->
    <div class="mb-2">
        <label asp-for="BasePrice">Base Price</label>
        <input asp-for="BasePrice" class="form-control" />
    </div>

    <hr />
    <h5>Discount (optional – max 7 days)</h5>

    <div class="mb-2">
        <label asp-for="DiscountPrice">Discount Price</label>
        <input asp-for="DiscountPrice" class="form-control" />
    </div>

    <div class="row mb-2">
        <div class="col">
            <label asp-for="DiscountStart">Discount Start</label>
            <input asp-for="DiscountStart" type="date" class="form-control" />
        </div>
        <div class="col">
            <label asp-for="DiscountEnd">Discount End</label>
            <input asp-for="DiscountEnd" type="date" class="form-control" />
        </div>
    </div>

    <div class="mb-2">
        <label asp-for="AvailableRooms"></label>
        <input asp-for="AvailableRooms" class="form-control" />
    </div>

    <div class="mb-2">
        <label asp-for="PackageType"></label>
        <select asp-for="PackageType" class="form-control"
                asp-items="Html.GetEnumSelectList<PackageType>()">
        </select>
    </div>

    <div class="mb-2">
        <label asp-for="AgeLimitation"></label>
        <input asp-for="AgeLimitation" class="form-control" />
    </div>

    <div class="mb-2">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
 



    <div class="mb-3">
        <label>תמונה ראשית</label>
        <input type="file" name="mainImage" class="form-control" accept="image/*" />

    </div>
    @if (!string.IsNullOrEmpty(Model.MainImageUrl))
    {
        <div class="mb-3">
            <label>Current Image</label><br />
            <img src="@Model.MainImageUrl"
                 style="max-width: 300px; border-radius: 10px;" />
        </div>
    }
    <div class="mb-3">
        <label>תמונות נוספות (גלריה)</label>
        <input type="file"
               name="galleryImages"
               class="form-control"
               multiple
               accept="image/*" />
    </div>
    @if (!string.IsNullOrEmpty(Model.GalleryImagesJson))
    {
        var images = Model.GalleryImagesJson
        .Split('\n', StringSplitOptions.RemoveEmptyEntries)
        .ToList();

        <h5 class="mt-4">תמונות קיימות</h5>

        <div id="galleryContainer" class="row g-3">
            @for (int i = 0; i < images.Count; i++)
            {
                <div class="col-md-3 text-center">
                    <img src="@images[i]"
                         class="img-fluid rounded mb-2"
                         style="height:120px;object-fit:cover" />

                    <div class="form-check">
                        <input class="form-check-input"
                               type="checkbox"
                               name="ImagesToDelete"
                               value="@images[i]"
                               id="img_@i" />
                        <label class="form-check-label" for="img_@i">
                            מחק תמונה
                        </label>
                    </div>
                </div>
            }
        </div>
        <input type="hidden" name="GalleryOrder" id="GalleryOrder" />

    }


    <button class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
