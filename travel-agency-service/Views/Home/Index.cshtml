@{
    ViewData["Title"] = "Home";
}
<!-- Video Background -->
<div class="video-background">
    <video autoplay muted loop playsinline>
        <source src="~/videos/3572188-hd_1920_1080_30fps.mp4" type="video/mp4" />
    </video>
</div>


<div class="container mt-5 home-content">
    <div class="row justify-content-center text-center">
        <div class="col-lg-8">

            <h1 class="display-4 fw-bold mb-3">
                ✈️ Welcome to Travel Agency
            </h1>

            <p class="lead mb-4 text-black">
                Plan, book, and manage your trips easily.<br />
                Our system allows customers to browse travel packages,
                register securely, and manage their bookings online.
            </p>

            @if (!User.Identity!.IsAuthenticated)
            {
                <!-- User not logged in -->
                <div class="d-flex justify-content-center gap-3 mt-4 ">
                    <a asp-area="Identity"
                       asp-page="/Account/Register"
                       class="btn btn-primary btn-lg px-4">
                        Register
                    </a>

                    <a asp-area="Identity"
                       asp-page="/Account/Login"
                       class="btn btn-outline-primary btn-lg px-4">
                        Login
                    </a>
                </div>
            }
            else
            {
                <!-- User logged in -->
                <div class="d-flex justify-content-center gap-3 mt-4">
                    <a asp-controller="Trips"
                       asp-action="Gallery"
                       class="btn btn-success btn-lg px-4">
                        Browse Trips
                    </a>


                    <a asp-controller="Trips"
                       asp-action="MyBookings"
                       class="btn btn-outline-secondary btn-lg px-4">
                        My Bookings
                    </a>


                </div>
            }

        </div>
    </div>

    <hr class="my-5 home-divider" />

    <!-- Info section -->
    <div class="row text-center text-black">
        <div class="col-md-4 mb-4">
            <div class="feature-card">
                <h5 class="fw-bold">🌍 Travel Packages</h5>
                <p>
                    Browse a variety of destinations and travel offers.
                </p>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="feature-card">
                <h5 class="fw-bold">🔐 Secure System</h5>
                <p>
                    Registration and login are protected using secure authentication.
                </p>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="feature-card">
                <h5 class="fw-bold">📅 Easy Management</h5>
                <p>
                    Manage bookings, payments, and notifications easily.
                </p>
            </div>
        </div>
    </div>

</div>
