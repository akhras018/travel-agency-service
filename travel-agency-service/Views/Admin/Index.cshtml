<div class="row g-4 justify-content-center">

    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h5 class="card-title">🌍 Travel Packages</h5>
                <p class="card-text">
                    Add, edit or remove travel packages.
                </p>
                <a asp-controller="TravelPackages"
                   asp-action="Index"
                   class="btn btn-primary w-100">
                    Manage Travel Packages
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h5 class="card-title">📩 Waiting Lists</h5>
                <p class="card-text">
                    Manage waiting lists and email notifications.
                </p>
                <a asp-controller="Admin"
                   asp-action="WaitingLists"
                   class="btn btn-primary w-100">
                    Waiting Lists
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h5 class="card-title">👤 Users Management</h5>
                <p class="card-text">
                    View users, bookings history and account status.
                </p>
                <a asp-controller="Admin"
                   asp-action="Users"
                   class="btn btn-primary w-100">
                    Manage Users
                </a>
            </div>
        </div>
    </div>

</div>
