@{
    ViewData["Title"] = "Trip Gallery";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">Trip Gallery</h1>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Paris Getaway</h5>
                    <p class="card-text">
                        Romantic trip to Paris <br />
                        Price: ₪4,500
                    </p>

                    <div class="d-flex justify-content-between">
                        <button class="btn btn-outline-primary">Book</button>
                        <button class="btn btn-primary">Buy Now</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Rome Adventure</h5>
                    <p class="card-text">
                        Explore ancient Rome <br />
                        Price: ₪3,800
                    </p>

                    <div class="d-flex justify-content-between">
                        <button class="btn btn-outline-primary">Book</button>
                        <button class="btn btn-primary">Buy Now</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
