@model IEnumerable<travel_agency_service.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<div class="container mt-5">
    <h1 class="fw-bold mb-4">My Bookings</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            You have no bookings.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>Destination</th>
                        <th>Country</th>
                        <th>Dates</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td>@booking.TravelPackage.Destination</td>
                            <td>@booking.TravelPackage.Country</td>
                            <td>
                                @booking.TravelPackage.StartDate.ToShortDateString()
                                -
                                @booking.TravelPackage.EndDate.ToShortDateString()
                            </td>
                            <td>₪@booking.TravelPackage.BasePrice</td>

                            <!-- Status -->
                            <td>
                                @if (booking.IsPaid)
                                {
                                    <span class="badge bg-success">Paid</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Unpaid</span>
                                }
                            </td>

                            <!-- Actions -->
                            <td class="d-flex justify-content-center gap-2">

                                @if (!booking.IsPaid)
                                {
                                    <a asp-action="Pay"
                                       asp-route-bookingId="@booking.Id"
                                       class="btn btn-success btn-sm">
                                        Pay
                                    </a>



                                }

                                <form asp-action="CancelBooking"
                                      method="post"
                                      onsubmit="return confirm('Are you sure you want to cancel this booking?');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="bookingId" value="@booking.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        Cancel
                                    </button>
                                </form>

                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    }
</div>
